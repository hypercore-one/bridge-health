# Orchestrator Status Page Configuration

# Flask Application Settings
FLASK_HOST=0.0.0.0
FLASK_PORT=5001
FLASK_DEBUG=false

# Security Settings
SECRET_KEY=your-secret-key-here-please-change-this-in-production

# API Keys - comma-separated list of valid API keys
# Use generate_api_key.py to create secure keys
API_KEYS=zn_admin_abc123,zn_readonly_def456,zn_monitor_ghi789

# Legacy single API key (for backward compatibility)
# API_KEY=your-single-api-key-here

ALLOWED_ORIGINS=*
RATE_LIMIT_PER_MINUTE=60

# SSL/TLS Configuration
SSL_ENABLED=false
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem

# Orchestrator Configuration
ORCHESTRATOR_PORT=55000
ORCHESTRATOR_TIMEOUT=5
MAX_CONCURRENT_REQUESTS=10
MAX_ORCHESTRATORS=20

# Update Settings
UPDATE_INTERVAL=60
MIN_ONLINE_FOR_BRIDGE=16

# File Paths (relative to data/ directory)
